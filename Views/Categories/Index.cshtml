@using Shop_system.Models;
@model List<Category>


@section title {
    <h3>Categories</h3>

}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var cat in Model)
            {
                <tr>
                    <td>@cat.Name</td>
                    <td>@cat.Description</td>
                    <td><a class="btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@cat.CategoryId">Edit</a></td>
                    <td><a class="btn-link" asp-controller="categories" asp-action="delete" asp-route-categoryid="@cat.CategoryId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

    <br />

    <a class="btn-primary" asp-controller="categories" asp-action="add">Add</a>
}


@section scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you sure to delete category?");
        }
    </script>
}